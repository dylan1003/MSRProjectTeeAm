@model Tuple<List<MSR_mvc.Models.Veteran>, List<MSR_mvc.Models.AifResult>>

@{
    ViewBag.Title = "Veteran";
}

<section class="jumbotron bg-dark">
    <div class="container">
        <div class="row">
            <!--Search Field-->
            <form class="col align-self-center">
                <div class="row form-group">
                    <input type="text" class="col-10 form-control" id="SearchField" placeholder="Search For Veteran" name="SearchString" value="">
                    <button type="submit" class="col-2 btn btn-primary">Submit</button>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="Name" checked>
                    <label class="form-check-label text-white" for="inlineRadio1">Name</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="Regiment">
                    <label class="form-check-label text-white" for="inlineRadio2">Regiment Number</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio3" value="Address">
                    <label class="form-check-label text-white" for="inlineRadio3">Address</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio4" value="Unit">
                    <label class="form-check-label text-white" for="inlineRadio4">Unit</label>
                </div>
            </form>
            <!--./Search Field-->
        </div>
        <br>
        <div class="row">
            <!--Results Field-->
            <h3 class="text-white">This is a list of search results from the MSR Database</h3>
            <table class="table table-light rounded-bottom">
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Regiment Number
                    </th>
                    <th>
                        Address
                    </th>
                    <th>
                        Unit
                    </th>
                </tr>
                @for (int i = 0; i < Model.Item1.Count; i++)
                {
                    <tr>
                        <td>
                            @{
                                var fullName = Model.Item1[i].Surname + ", " + Model.Item1[i].FirstName;
                                <a href="/veterans/portfolio/@Html.DisplayFor(modelItem => Model.Item1[i].Id)">@Html.DisplayFor(m => fullName)</a>
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.Item1[i].ServiceNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.Item1[i].Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.Item1[i].Unit)
                        </td>
                    </tr>
                }
            </table>
            <!--./Results Field-->
            <!--AIF Results-->
            @if (Model.Item2.Count > 0)
            {
                <h3 class="text-white">This is a partial list of search results from the AIF Database</h3>
                <table class="table table-light rounded-bottom">
                    @{
                        <tr>
                            <th>Regiment Number</th>
                            <th>Name</th>
                            <th>Address</th>
                            <th>Battalion</th>
                        </tr>
                        <tbody>
                            @for (int i = 0; i < Model.Item2.Count; i++)
                            {
                                <tr>
                                    <td>@Model.Item2[i].RegimentNumber</td>
                                    <td><a href="@Model.Item2[i].ProfileLink">@Model.Item2[i].Name</a></td>
                                    <td>@Model.Item2[i].Address</td>
                                    <td>@Model.Item2[i].Battalion</td>
                                </tr>
                            }
                        </tbody>
                    }
                </table>
            }
            <!--./AIF Results-->
        </div>
    </div>
</section>


